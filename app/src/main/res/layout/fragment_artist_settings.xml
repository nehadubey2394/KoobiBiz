<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg_color"
    android:focusable="true"
    >
    <ScrollView
        android:layout_above="@+id/vBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rlProfile"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_half_ract">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/profile"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlStaff"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_half_ract">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/text_staff"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlWorkinhHrs"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_half_ract">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/working_hours"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlCategories"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_half_ract">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/categories"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlStaffPlanner"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_half_ract">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/staff_planner"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlVoucherCode"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_half_ract">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/voucher_code"
                    />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/vBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_bg"
        android:layout_alignParentBottom="true"
       />

</RelativeLayout>