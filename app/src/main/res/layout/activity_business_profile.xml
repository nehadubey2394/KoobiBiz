<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    tools:context=".activity.profile.BusinessProfileActivity">

    <ImageView
        android:id="@+id/bg_header"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:src="@drawable/toolbar_header"/>

    <include layout="@layout/actionbar_fill_business_profile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bg_header"
        android:orientation="vertical">

        <views.progressview.ProgressView
            android:id="@+id/progressView"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_margin="10dp" />

        <!-- activity_screen_slide.xml -->
        <views.NonSwipeableViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pager"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>
