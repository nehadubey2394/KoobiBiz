<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    app:cardElevation="2dp"
    >
    <RelativeLayout
        android:id="@+id/rlContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <View
            android:id="@+id/lineView"
            android:layout_width="2dp"
            android:layout_height="76dp"
            android:layout_alignParentLeft="true"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lineView"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfilePic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/defoult_user_img"
                app:civ_border_width="1.5dp"
                android:background="@drawable/gradient_circle_img"
                app:civ_border_color="@color/transparent"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:maxWidth="180dp"
                    android:text="Jamie Bloggs"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/rlStaffName"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="2dp"
                    android:padding="2dp"
                    android:background="@drawable/bg_pink_strock_circle"
                    >
                    <TextView
                        android:id="@+id/tvStaffName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:maxWidth="200dp"
                        android:minWidth="50dp"
                        android:minHeight="16dp"
                        android:text="NA"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_centerInParent="true" android:textColor="@color/colorPrimary"
                        android:maxLines="1"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="2"
                android:maxWidth="180dp"
                android:text="16 March 2018"
                android:textColor="@color/grey"
                android:paddingRight="1dp"
                android:layout_gravity="end"
                android:gravity="end"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvBookingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingRight="1dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="2"
                android:maxWidth="180dp"
                android:text="19:00 pm - 20:00 pm"
                android:textColor="@color/text_color"
                android:layout_gravity="end"
                android:layout_marginTop="1dp"
                android:gravity="end"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvServices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="2"
                android:maxWidth="180dp"
                android:text="Mackup"
                android:textColor="@color/text_color"
                android:layout_gravity="end"
                android:layout_marginTop="1dp"
                android:gravity="end"
                android:textSize="12sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentBottom="true"
            android:padding="2dp"
            >
            <View
                android:id="@+id/view"
                android:layout_width="65dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                />

            <android.support.v7.widget.AppCompatButton
                style="@style/My_Button_Small.Invert"
                android:layout_width="68dp"
                android:layout_height="25dp"
                android:id="@+id/btnAccept"
                android:layout_toRightOf="@+id/view"
                android:text="@string/text_accept" android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:textSize="10sp"
                />


            <android.support.v7.widget.AppCompatButton
                style="@style/My_Button_Small.Invert"
                android:layout_width="68dp"
                android:layout_height="25dp"
                android:id="@+id/btnReject"
                android:text="@string/text_reject"
                android:padding="2dp"
                android:textSize="10sp"
                android:layout_toEndOf="@+id/btnAccept"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/btnAccept"
                android:layout_marginLeft="15dp" />

            <android.support.v7.widget.AppCompatButton
                style="@style/My_Button_Small.Invert"
                android:layout_width="68dp"
                android:layout_height="25dp"
                android:id="@+id/btnCounter"
                android:text="@string/counter"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:textSize="10sp"
                android:layout_toEndOf="@+id/btnReject"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/btnReject"
                android:layout_marginLeft="15dp"
                />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
